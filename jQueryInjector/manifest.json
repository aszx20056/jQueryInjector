{
  "manifest_version"  :     2,
  "name"              :     "jQuery Injector",
  "short_name"        :     "jQueryInjector",
  "version"           :     "0.0.1",
  "description"       :     "Inject jQuery into the page.",
  "browser_action"    :     {
    "name"  : "jQuery Injector",
    "default_popup": "pages/popup_settings.html"
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts" : [ "scripts/background.js" ]
  },
  "options_page" : "pages/settings.html",
  "content_scripts": [ {
      "matches": [ "<all_urls>" ],
      "js": [
          "scripts/injected.js"
      ],
      "all_frames": true
  }]
}
